{
  "root": true,
  "plugins": ["jest", "import"],
  "extends": ["standard", "plugin:@typescript-eslint/recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "ErrorUtils": false
  },
  "rules": {
    "prefer-const": 0,
    "no-console": "off",
    "no-useless-escape": "off",
    "quote-props": 0,
    "header/header": "off",
    "import/first": 0,
    "import/no-webpack-loader-syntax": 0,
    "import/no-named-default": 0,
    "indent": 1,
    "space-infix-ops": 1,
    "no-multi-spaces": 1,
    "spaced-comment": 1,
    "camelcase": 1,
    "no-dupe-keys": 1,
    "no-unused-vars": 1,
    "curly": [1, "multi"],
    "no-self-compare": 1,
    "object-curly-spacing": ["error", "never"]
  }
}
